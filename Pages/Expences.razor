
@page "/expences"
@using BudgetTracker.Models
@using BudgetTracker.Services

@inject IPersonal PersonalService

<h2>Add Expense</h2>
<EditForm Model="expenseModel" OnValidSubmit="AddExpense">
	<DataAnnotationsValidator />
	<ValidationSummary />
	<div class="mb-2">
		<label>Name:</label>
		<InputText @bind-Value="expenseModel.Name" class="form-control" />
	</div>
	<div class="mb-2">
		<label>Amount:</label>
		<InputNumber @bind-Value="expenseModel.Amount" class="form-control" />
	</div>
	<div class="mb-2">
		<label>Date:</label>
		<InputDate @bind-Value="expenseModel.Date" class="form-control" />
	</div>
	<div class="mb-2">
		<label>Description:</label>
		<InputText @bind-Value="expenseModel.Description" class="form-control" />
	</div>
	<div class="mb-2">
		<label>Initial Balance:</label>
		<InputNumber @bind-Value="expenseModel.Balance" class="form-control" />
	</div>
	<button type="submit" class="btn btn-primary">Add Expense</button>
</EditForm>

<h3 class="mt-4">Recent Expenses</h3>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Amount</th>
			<th>Date</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var exp in PersonalService.GetRecentExpenses(10))
		{
			<tr>
				<td>@exp.Name</td>
				<td>@exp.Amount</td>
				<td>@exp.Date.ToShortDateString()</td>
				<td>@exp.Description</td>
			</tr>
		}
	</tbody>
</table>

@code {
	private Expense expenseModel = new Expense(string.Empty, 0, DateTime.Now, string.Empty, 0);

	private void AddExpense()
	{
		PersonalService.AddExpence(expenseModel.Name, expenseModel.Amount, expenseModel.Date, expenseModel.Description ?? string.Empty, expenseModel.Balance);
		expenseModel = new Expense(string.Empty, 0, DateTime.Now, string.Empty, 0);
		StateHasChanged();
	}
}
